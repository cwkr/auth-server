<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ .title }} - Login</title>
    <link rel="stylesheet" href="/style">
</head>
<body>
<form method="post" action="{{ .query }}" style="width: 240px; max-width: 100%; margin: 0 auto; display: flex; flex-direction: column;">
    <input type="text" name="user_id" placeholder="Username"{{ with .userID }} value="{{ . }}"{{ end }}>
    <input type="password" name="password_plain" placeholder="Password">
    <button type="submit" style="margin: 1em auto;">Login</button>
</form>
{{ with .message }}
    <div style="color: crimson; border-radius: 6px; background: var(--background); padding: 10px;">{{ . }}</div>
{{ end }}
</body>
</html>
